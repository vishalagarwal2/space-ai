# =============================================================================
# CORELIAOS ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values according to your setup
# Never commit the actual .env file to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database settings
# Leave empty to use SQLite as fallback
DB_NAME=coreliaos_db
DB_USER=coreliaos_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# For Docker setup, use DB_HOST=db
# For local setup, use DB_HOST=localhost

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================
# Generate a new secret key for production: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-django-secret-key-here

# Debug mode (NEVER set to True in production)
DEBUG=True

# Allowed hosts (comma-separated, no spaces)
# For production, add your domain: example.com,www.example.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Timezone setting
TIME_ZONE=UTC

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# Email backend for development
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production email (Gmail example)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=CoreliaOS <noreply@yourdomain.com>

# =============================================================================
# CACHE & SESSION CONFIGURATION (Optional)
# =============================================================================
# Redis URL for caching and sessions
# For Docker: redis://redis:6379/1
# For local: redis://localhost:6379/1
# Leave empty to use local memory cache
REDIS_URL=redis://localhost:6379/1

# =============================================================================
# DOCKER SERVICES CONFIGURATION
# =============================================================================
# pgAdmin credentials (for Docker setup)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin

# =============================================================================
# PRODUCTION SETTINGS (Optional)
# =============================================================================
# These settings are automatically applied when DEBUG=False

# Static files configuration
# STATIC_URL=/static/
# STATIC_ROOT=/app/staticfiles/

# Media files configuration
# MEDIA_URL=/media/
# MEDIA_ROOT=/app/media/

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================
# 1. Generate a new SECRET_KEY for each environment
# 2. Use strong passwords for database and admin accounts
# 3. Set DEBUG=False in production
# 4. Update ALLOWED_HOSTS with your actual domain in production
# 5. Configure proper email settings for production
# 6. Use environment-specific values for database hosts:
#    - Local development: localhost
#    - Docker development: db
#    - Production: your-db-host.com


# AI Model API Keys (Optional)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
COHERE_API_KEY=your_cohere_api_key


# Google API Configuration (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

AWS_ACCESS_KEY_ID="<YOUR_MEDIA_UPLOADER_KEY>"
AWS_SECRET_ACCESS_KEY="<YOUR_MEDIA_UPLOADER_SECRET>"
AWS_STORAGE_BUCKET_NAME="myapp-uploads"
AWS_S3_REGION_NAME="ap-south-1"
AWS_DEFAULT_ACL=None
AWS_S3_FILE_OVERWRITE=False  # prevents overwriting files
AWS_QUERYSTRING_AUTH=True    # if you want signed URLs